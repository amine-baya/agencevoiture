


    <div class="col-3 mb-4">
    {% if property.filename %}
        <img src="/images/properties/{{ property.filename }}" alt="card-img-top" style="width:100%; ">
    {% endif %}

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <a href="{{ path('property.show',{id: property.id, title: property.title})}}"> {{ property.title }} </a>
                </h5>
                    <p class="card-text" > {{property.nbchevaux}} cv -   {{property.origin}} ({{property.marque}})  </p>
                <div class="text-primary" style="font-weight:bold; font-size: 2rem;" > {{property.formattedPrice }} DT </div>
            </div>
        </div>
    </div>

  






    